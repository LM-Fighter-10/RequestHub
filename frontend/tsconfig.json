{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // ← add Node + Vite types here
    "types": ["vite/client", "node"],

    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true
  },

  // ← include your source AND the config file
  "include": ["src/**/*", "vite.config.ts"]
}
